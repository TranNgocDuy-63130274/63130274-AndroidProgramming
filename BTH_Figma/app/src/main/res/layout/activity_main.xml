<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/pink_circle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/anh4" />

    <ImageView
        android:id="@+id/green_circle"
        android:layout_width="104dp"
        android:layout_height="114dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="-1dp"
        android:src="@drawable/anh5" />

    <ImageView
android:id="@+id/yellow_triangle"
android:layout_width="120dp"
android:layout_height="120dp"
android:src="@drawable/tamgiac"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
android:layout_marginBottom="50dp"
android:layout_marginRight="30dp" />

<ImageView
android:id="@+id/anh1"
android:layout_width="150dp"
android:layout_height="150dp"
android:src="@drawable/anh1"
android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/lamp_image"
        android:layout_width="112dp"
        android:layout_height="155dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/anh2" />

<TextView
android:id="@+id/kids_corner_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="KIDS Corner"
android:textSize="30sp"
android:textColor="#000000"
android:textStyle="bold"
android:layout_above="@id/anh1"
android:layout_centerHorizontal="true" />

<TextView
android:id="@+id/version_text"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="v1.0.1"
android:textSize="16sp"
android:textColor="#808080"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
android:layout_marginBottom="10dp"
android:layout_marginRight="10dp" />

    </RelativeLayout>