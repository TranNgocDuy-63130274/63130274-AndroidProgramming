<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_AboutMe">

        <TextView
            android:id="@+id/tv_aboutme"
            android:layout_width="139dp"
            android:layout_height="56dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="42dp"
            android:gravity="center"
            android:text="Trần Ngọc Duy"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="179dp"
            android:layout_height="176dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_aboutme"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pharmacy" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="139dp"
            android:layout_height="54dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="63.MTT"
            android:textColor="@color/blue"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tv_aboutme" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="214dp"
            android:layout_height="41dp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="96dp"
            android:gravity="center"
            android:text="About Me"
            android:textColor="@color/blue"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="141dp"
            android:layout_height="49dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="MSSV: 63130274"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>